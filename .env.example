# OpenBackground Configuration
# Copy this file to .env and customize for your deployment

# API Authentication
# Comma-separated list of valid API keys
API_KEYS=your-api-key-here,another-key-if-needed

# Model Configuration
# Set to your preferred Hugging Face image segmentation model
# Find compatible models at: https://huggingface.co/models?pipeline_tag=image-segmentation
DEFAULT_MODEL=your-model/name
AVAILABLE_MODELS=your-model/name,another-model/name

# Directory to cache downloaded models
MODEL_CACHE_DIR=./models

# Processing Configuration
# Maximum allowed image dimension (width or height)
MAX_IMAGE_SIZE=4096

# Model input size (square, typically 1024 for most segmentation models)
MODEL_INPUT_SIZE=1024

# Statistics Configuration
# Enable SQLite persistence for statistics
ENABLE_STATS_PERSISTENCE=false

# Path to SQLite database for stats (if persistence enabled)
STATS_DB_PATH=./data/stats.db

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
